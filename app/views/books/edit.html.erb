<%= form_with model: @book do |f| %>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のerrorが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

  <h1>Editing Book</h1>

  <strong>Title</strong>
  <%= f.text_field :title %>

  <strong>Body</strong>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

　<%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>

  <% end %>