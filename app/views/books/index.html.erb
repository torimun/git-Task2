<!DOCTYPE html>
<html>
  <head>
  <title>メインページ</title>
  </head>

  <body>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><a class="Edit" href=" /books/:id/edit">Edit</a></td>
          <td><a class="Destroy" href="/books/:id">Destroy</a></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <h2>New book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <strong>Title</strong>
      <%= f.text_field :title %>

      <strong>Body</strong>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
      <% end %>
  </body>

</html>